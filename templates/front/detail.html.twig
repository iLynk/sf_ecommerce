{% extends 'base.html.twig' %}

{% block title %}
	{{game.name}}
{% endblock %}

{% block body %}
	<div class="example-wrapper">
		<h1>{{game.name}}
		</h1>
		<p>{{game.description}}</p>
		<p>Catégories :</p>
		<ul>
			{% for category in game.category %}
				<li>{{category.name}}</li>
			{% endfor %}
		</ul>
		{% for image in game.gameImages %}
			<img src="{{ image.file }}" alt="{{ image.name }}">
		{% endfor %}
	</p>
	<p>stock restant :
		{{game.stock}}</p>
	<a class="link" href="/">Retour à la page d'accueil</a>

</div>{% endblock %}
